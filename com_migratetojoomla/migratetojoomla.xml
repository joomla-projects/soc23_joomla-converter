<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
    <name>MigrateToJoomla</name>
    <author>Joomla! Project</author>
    <creationDate>2024</creationDate>
    <copyright>(C) 2024 Open Source Matters, Inc.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>admin@joomla.org</authorEmail>
    <authorUrl>www.joomla.org</authorUrl>
    <version>1.0.0</version>
    <description>COM_MIGRATETOJOOMLA_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Component\MigrateToJoomla</namespace>
    <administration>
        <menu link="index.php?option=com_migratetojoomla">MigrateToJoomla</menu>
        <files folder="admin">
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>forms</folder>
            <file>access.xml</file>
            <file>config.xml</file>
        </files>
        <languages folder="admin">
            <language tag="en-GB">language/en-GB/com_migratetojoomla.ini</language>
            <language tag="en-GB">language/en-GB/com_migratetojoomla.sys.ini</language>
        </languages>
    </administration>
    <media destination="com_migratetojoomla" folder="media">
        <folder>js</folder>
        <folder>css</folder>
        <file>joomla.asset.json</file>
    </media>
</extension>
